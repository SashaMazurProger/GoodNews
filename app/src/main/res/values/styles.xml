<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Article about text style -->
    <style name="ArticleDetailsCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/color_rectangle</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Article detail card style-->
    <style name="ArticleDetailsCard">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="BaseCardStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
